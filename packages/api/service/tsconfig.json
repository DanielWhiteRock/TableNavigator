{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "target": "es2018"
  },
  "exclude": [
    "dangerfile.ts",
    "node_modules"
  ],
  "include": [
    "./*.ts",
    "./data/*.json",
    "./src/**/*.js",
    "./src/**/*.ts",
    "dangerfile.ts",
    "test/**/*.js",
    "test/**/*.ts"
  ],
  "ts-node": {
    "files": true
  }
}
